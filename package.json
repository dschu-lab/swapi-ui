{
  "name": "swapi-ui",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@adobe/react-spectrum": "^3.16.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.25",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "class-transformer": "^0.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.34.16",
    "react-scripts": "5.0.0",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.5.5",
    "web-vitals": "^2.1.4"
